
from typing import List

class Solution:
    def containsNearbyDuplicate(self, nums: List[int], k: int) -> bool:
        """
        Return True if there are two indices i and j such that
        nums[i] == nums[j] and abs(i - j) <= k.
        """
        last_seen = {}
        for i, value in enumerate(nums):
            # if value seen before and index distance is within k
            if value in last_seen and i - last_seen[value] <= k:
                return True
            last_seen[value] = i
        return False

if __name__ == "__main__":
    sol = Solution()
    print(sol.containsNearbyDuplicate([1,2,3,1], 3))  
    print(sol.containsNearbyDuplicate([1,0,1,1], 1))  
    print(sol.containsNearbyDuplicate([1,2,3,1,2,3], 2))  
